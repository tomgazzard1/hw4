<h1><%= @place["name"] %></h1>

<% if @current_user %>
  <% for post in @posts %>

  <div class ="container">
    <div class="row">
      <div class="col-md-4 col-sm-6">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <p><%= post["description"] %></p>

  
      <p>
        <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
      </p>
  <% end %>

<% else %>
  You must first <a href="/login">login</a> to view posts.
<% end %>

      <p>
        <a href="/places">Back to All Places</a>
      </p>